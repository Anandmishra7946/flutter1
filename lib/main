import 'package:flutter/material.dart';

void main() {
  runApp( MaterialApp(
    
    home: Scaffold(
      body: Container(
        decoration: const BoxDecoration(color: Colors.white),
        child: const Center(
          child: Text('Hello World!', style:TextStyle(backgroundColor: Colors.red, ),),
        ),
      ),
    ),
  ));
}


runApp(
      const MaterialApp(home: Scaffold(body: Text('Hello World!'),),),);